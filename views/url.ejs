<!DOCTYPE html>
<title>Medagascar</title>

<head>
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <link rel="stylesheet" href="/css/profile-style.css">
    <link rel="stylesheet" href="/css/SignIn.css">
    <link rel="stylesheet" href="/css/a-styles.css">


</head>

<body>
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="col-xl-6 col-md-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-35">
                                        <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius"
                                            alt="User-Profile-Image">
                                    </div>
                                    <h1 class="f-w-500">
                                        <%=user%>
                                    </h1>
                                    <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                </div>
                            </div>
                            <div>
                                <button type="text" id="" value="Copy" onclick="Copy();" id="url" style="background-color: #d6aba3;
                                border: none;
                                color: black;
                                padding: 20px;
                                text-align: center;
                                text-decoration: none;
                                display: inline-block;
                                font-size: 20px;
                                margin-left: 90%;
                                margin-top: 2%;
                                border-radius: 20px;
                                width: 100px;
                                ">Copy</button>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h2 class="m-b-20 p-b-5 b-b-default f-w-600">Information:</h2>
                                    
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <h3 class="m-b-10 f-w-600">Age</h3>
                                            <h4 class="text-muted f-w-400">
                                                <%=age%>
                                            </h4><br>
                                        </div>
                                        <div class="col-sm-6">
                                            <h3 class="m-b-10 f-w-600">Gender</h3>
                                            <h4 class="text-muted f-w-400">
                                                <%=gender%>
                                            </h4><br>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-6">
                                            <h3 class="m-b-10 f-w-600">Allergies:</h3>
                                            <% allergies.forEach(function(allergy){ %>
                                                <h4 class="text-muted f-w-400">
                                                    <%=allergy.allergy%>
                                                </h4><br>
                                                <% }); %>
                                        </div>
                                        <div class="col-sm-6">
                                            <h3 class="m-b-10 f-w-600">Medicines on:</h3>
                                            <% medicines.forEach(function(medicine){ %>
                                                <h4 class="text-muted f-w-400">
                                                    <%=medicine.medicine%>
                                                </h4><br>
                                                <% }); %>
                                        </div>
                                        <div class="col-sm-6">
                                            <h3 class="m-b-10 f-w-600">Family History:</h3>
                                            <% family.forEach(function(fam){ %>
                                                <h4 class="text-muted f-w-400">
                                                    <%=fam.disease%>
                                                </h4><br>
                                                <% }); %>
                                        </div>

                                        <!-- <div class="col-sm-6">
                                    <h3 class="m-b-10 f-w-600">Possible Diseases</h3>
                                    <% family.forEach(function(fam){ %>
                                       <h4 class="text-muted f-w-400">
                                          <%=fam.disease%>
                                       </h4><br>
                                       <% }); %>
                                 </div> -->

                                    </div>
                                    

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

 

</body>
<script>
    function Copy() {
            let url = document.location.href
            navigator.clipboard.writeText(url).then(function () {
            console.log('Copied!');
        }, function () {
            console.log('Copy error')
        });
        }
</script>

</html>