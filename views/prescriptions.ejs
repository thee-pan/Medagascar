<!DOCTYPE html>
<title>Medagascar</title>
<head>
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="/css/profile-style.css">

</head>
<body>
    
<div class="wrapper">
    <div class="sidebar">
        <div class="logo">
            <h2>Medagascar</h2>
        </div>
        <br>
        <ul style="padding-left: 0;">
            <li><a href="/profile"><i class="fas fa-user"></i>Profile</a></li>
            <li><a href="/upload"><i class="fas fa-upload"></i>Upload</a></li>
            <li><a href="/prescription"><i class="fas fa-prescription"></i>Prescription</a></li>
            <li><a href="/logout"><i class="fas fa-sign-out-alt"></i>Sign Out</a></li>
            <li><a href="/emergency"><i class="fas fa fa-medkit" aria-hidden="true"></i>Emergency</a></li>


        </ul>
    </div>
</div>
        <div class="pres-upload">
            <ul>
                <div class="container">
                    <div class="row">
                        <%if (records.length>0){ %>
                            <% records.forEach(function(row){ %>
                                <div class="col-md-3">
                                    <!-- <img src="/<%= row.imageDetails %>" alt="image" style="width:100px;margin:5px auto;"> -->
                                    <a href="/<%= row.imageDetails %>" class="without-caption image-link">
                                        <img src="/<%= row.imageDetails %>"
                                            alt="image" style="width:200px;margin:5px auto;" />
                                    </a>
                                </div>
                                <% }) }%>
                    </div>
                </div>
             
            </ul>
            
        </div>
    </div>
    <script>
        $('.without-caption').magnificPopup({
                type: 'image',
                closeOnContentClick: true,
                closeBtnInside: false,
                mainClass: 'mfp-no-margins mfp-with-zoom', // class to remove default margin from left and right side
                image: {
                    verticalFit: true
                },
                zoom: {
                    enabled: true,
                    duration: 300 // don't foget to change the duration also in CSS
                }
            });
    </script>

    <script>
        function show() {
                var x = document.getElementById("image");
                if (x.style.display === "none") {
                    x.style.display = "block";
                    console.log("entered show()")
                } else {
                    x.style.display = "none";
                }
            }
    </script>
</body>
</html>
